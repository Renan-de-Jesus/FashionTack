                        <Border
                            BorderBrush="Gray"
                            BorderThickness="1,1,1,1"
                            CornerRadius="8">
                            <StackPanel Margin="5" Orientation="Horizontal">

                                <TextBlock
                                    Width="30"
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{Binding Id}" />

                                <TextBlock
                                    Width="150"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{Binding Description}" />

                                <TextBlock
                                    Width="100"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{Binding Color}" />

                                <TextBlock
                                    Width="120"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{Binding Brand}" />

                                <TextBlock
                                    Width="50"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{Binding Size}" />

                                <TextBlock
                                    Width="80"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{Binding Gender}" />
                                <TextBox
                                    Width="50"
                                    Height="40"
                                    Margin="5"
                                    Padding="5"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center"
                                    FontSize="16"
                                    Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBox.Style>
                                        <Style TargetType="{x:Type TextBox}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                                        <Border
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="10">
                                                            <ScrollViewer x:Name="PART_ContentHost" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>

                                </TextBox>
                                <Button
                                    Width="40"
                                    Height="35"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource twDownload}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border
                                                Padding="5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Path
                                        Width="20"
                                        Height="21"
                                        Data="{StaticResource TrashIconGeometry}"
                                        Fill="White"
                                        Stretch="Uniform"
                                        Stroke="#FF3B3B"
                                        StrokeThickness=".8" />
                                </Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <StackPanel
            Margin="0,136,55,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <TextBlock
                Margin="0,0,20,0"
                HorizontalAlignment="Left"
                FontSize="16"
                Text="Numero do documento" />
            <TextBox
                x:Name="documentTxt"
                Width="200"
                Height="40"
                Margin="5,5,5,30"
                Padding="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                FontSize="16"
                GotFocus="RemoveText"
                IsEnabled="False"
                KeyDown="TextBox_KeyDown"
                LostFocus="AddText"
                Opacity=".6"
                Text="Documento"
                TextWrapping="Wrap">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="08">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBlock
                Margin="0,0,20,0"
                HorizontalAlignment="Left"
                FontSize="16"
                Text="Opereção a ser feita" />
            <ComboBox
                x:Name="OperationComboBox"
                Width="200"
                Height="40"
                Margin="5,5,5,30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                FontSize="16"
                IsEnabled="False"
                SelectionChanged="OperationComboBox_SelectionChanged"
                Style="{StaticResource CustomComboBoxStyle}">
                <ComboBoxItem Content="Entrada de Estoque" />
                <ComboBoxItem Content="Saída de Estoque" />
                <ComboBoxItem Content="Transferência" />
                <ComboBoxItem Content="Ajuste de Estoque" />
                <ComboBoxItem Content="Perda" />
                <ComboBoxItem Content="Roubo" />
                <ComboBoxItem Content="Devolução" />
            </ComboBox>
            <RadioButton
                x:Name="prohibitedRdBt"
                Width="93"
                Height="28"
                Margin="30,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Checked="prohibitedRdBt_Checked"
                Content="Entrada"
                FontSize="16" />
            <RadioButton
                x:Name="exitRdBt"
                Width="83"
                Margin="30,10,0,70"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Checked="exitRdBt_Checked"
                Content="Saida"
                FontSize="16" />
            <Button
                x:Name="btnSave"
                Width="242"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#2888E3"
                Click="btnSave_Click"
                Content="Salvar"
                FontSize="16"
                Foreground="White"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource HoverButtonStyle}">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border
                            Padding="5"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness=".5"
                            CornerRadius="08">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
