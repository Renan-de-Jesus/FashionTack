                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Grid Background="{TemplateBinding Background}">
                                        <ContentPresenter />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Margin="30,5,0,0" Orientation="Horizontal">
                                <TextBlock
                                    Height="30"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Text="-" />
                                <TextBlock
                                    Height="30"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Text="{Binding Description}" />
                                <TextBlock
                                    Height="30"
                                    Margin="50,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="X" />
                                <TextBlock
                                    Height="30"
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Quantity}" />
                            </StackPanel>

                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


            <Border
                Width="186"
                Height="1"
                Margin="0,10,0,0"
                BorderBrush="Gray"
                BorderThickness="0,0,0,1" />
            <RadioButton
                x:Name="creditoRdBtn"
                Margin="20,30,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Checked="creditoRdBtn_Checked"
                Content="Crédito"
                FontSize="16" />

            <RadioButton
                x:Name="moneyRdBtn"
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                Checked="moneyRdBtn_Checked"
                Content="Dinheiro"
                FontSize="16" />

            <RadioButton
                x:Name="debitoRdBtn"
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Checked="debitoRdBtn_Checked"
                Content="Débito"
                FontSize="16" />

            <RadioButton
                x:Name="pixRdBtn"
                Height="18"
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                Checked="pixRdBtn_Checked"
                Content="Pix"
                FontSize="16" />
            <Border
                Width="186"
                Height="30"
                Margin="0,70,0,0"
                BorderBrush="Gray"
                BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        x:Name="totalPriceLbl"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="R$" />
                    <Label
                        x:Name="fullPriceLbl"
                        Grid.Row="1"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content="0,00"
                        FontSize="16" />
                </StackPanel>
            </Border>

            <Button
                Width="200"
                Height="45"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="#2888E3"
                Click="btnLogin_Click"
                Content="Finalizar Compra"
                FontSize="16"
                Foreground="White"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource HoverButtonStyle}">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border
                            Padding="5"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness=".5"
                            CornerRadius="08">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
