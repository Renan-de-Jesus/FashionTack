<Window
    x:Class="FashionTrack.SupplierRegister"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FashionTrack"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Cadastro de Fornecedores"
    Width="1280"
    Height="766"
    Activated="Window_Activated"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid x:Name="CusotmerRegister">
        <Grid.Background>
            <ImageBrush />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox
            x:Name="corporateReasonTxtBox"
            Width="500"
            Height="42"
            Margin="378,161,0,0"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            Panel.ZIndex="1"
            FontSize="16"
            GotFocus="removeTextCorporateReason"
            LostFocus="removeTextCorporateReason"
            Opacity="0.6"
            RenderTransformOrigin="0.716,-0.919"
            Text="RAZÃO SOCIAL"
            TextWrapping="Wrap">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox
            x:Name="addressTxtBox"
            Width="500"
            Height="42"
            Margin="378,310,0,0"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontSize="16"
            GotFocus="removeTextAddress"
            LostFocus="addTextAddress"
            Opacity="0.6"
            Text="ENDEREÇO DO FORNECEDOR"
            TextWrapping="Wrap">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border
                        Background="white"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>

        <TextBox
            x:Name="representativeTxtBox"
            Width="500"
            Height="42"
            Margin="378,463,0,0"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontSize="16"
            GotFocus="removeTextRepresentative"
            LostFocus="addTextRepresentative"
            Opacity="0.6"
            Text="NOME DO REPRESENTANTE"
            TextWrapping="Wrap">
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border
                        Background="white"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>

        <ComboBox
            x:Name="cityCbx"
            Width="447"
            Height="40"
            Margin="378,546,0,0"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            AutomationProperties.HelpText="dasdsadsa"
            Cursor="Hand"
            FontSize="16"
            MaxDropDownHeight="180"
            RenderTransformOrigin="0.502,1.238"
            SelectedIndex="1" />

        <xctk:MaskedTextBox
            x:Name="cnpjTxtBox"
            Width="500"
            Height="42"
            Margin="378,239,0,0"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontSize="16"
            GotFocus="removeTextCNPJ"
            LostFocus="removeTextCNPJ"
            Mask="00,000,000/0000-00"
            Opacity="0.6"
            PromptChar=" "
            Text="00000000000000">
            <xctk:MaskedTextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </xctk:MaskedTextBox.Template>
        </xctk:MaskedTextBox>

        <xctk:MaskedTextBox
            x:Name="phoneTxt"
            Width="500"
            Height="42"
            Margin="378,386,0,0"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontSize="16"
            GotFocus="removeTextPhone"
            LostFocus="addTextPhone"
            Mask="(00)00000-0000"
            Opacity="0.6"
            PromptChar=" "
            Text="99999999999">
            <xctk:MaskedTextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </xctk:MaskedTextBox.Template>
        </xctk:MaskedTextBox>

        <Rectangle
            Width="550"
            Height="644"
            Margin="354,46,0,62"
            HorizontalAlignment="Left"
            Panel.ZIndex="-1"
            RadiusX="10"
            RadiusY="10"
            Stroke="Black" />

        <Button
            x:Name="saveBtn"
            Width="250"
            Height="50"
            Margin="503,614,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#2888E3"
            Click="saveBtn_Click"
            Content="Cadastrar"
            Cursor="Hand"
            FontSize="16"
            Foreground="White">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        Padding="5"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness=".5"
                        CornerRadius="08">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock
            Width="284"
            Height="60"
            Margin="486,66,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="35"
            FontWeight="light"
            RenderTransformOrigin="0.505,0.284"
            Text="Novo Fornecedor"
            TextWrapping="Wrap" />

        <TextBlock
            Width="92"
            Height="23"
            Margin="375,138,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="16"
            Text="Razão Social"
            TextWrapping="Wrap" />

        <TextBlock
            Margin="375,213,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="16"
            Text="CNPJ"
            TextWrapping="Wrap" />

        <TextBlock
            Margin="375,289,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="16"
            RenderTransformOrigin="1.368,0.542"
            TextWrapping="Wrap"><Run Language="pt-br" Text="Endereço" /></TextBlock>

        <TextBlock
            Margin="375,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="16"
            Text="Telefone"
            TextWrapping="Wrap" />

        <TextBlock
            Margin="375,442,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="16"
            Text="Representante"
            TextWrapping="Wrap" />
        <Image
            x:Name="addCityBtn"
            Width="36"
            Height="28"
            Margin="850,552,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Panel.ZIndex="1"
            Cursor="Hand"
            MouseDown="addCityBtn_MouseDown"
            Source="/add128.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/add128.png" Stretch="Uniform" />
            </Image.OpacityMask>
        </Image>

    </Grid>
</Window>
