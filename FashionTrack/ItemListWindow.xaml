<Window x:Class="FashionTrack.ItemListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Item List" Height="400" Width="600">
    <Grid>
        <DataGrid x:Name="ItemsDataGrid" AutoGenerateColumns="True" SelectionMode="Single" SelectionChanged="ItemsDataGrid_SelectionChanged" Margin="10,35,10,10" />
        <Button Content="Excluir Item" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="DeleteButton_Click" />
    </Grid>
</Window>
